{
  "name": "Example: Capture Extension",
  "version": "1.0",
  "permissions": ["tabs"],
  "description": "See: github.com/MiloTheirself/module-html-capture",
  "background": { "persistent": false, "scripts": ["assets/extension.js"] },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["assets/extension-content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": { "title": "Capture current page as shown" },
  "manifest_version": 2
}
