{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "lib": ["es2018", "es2019", "es2020", "dom"],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
